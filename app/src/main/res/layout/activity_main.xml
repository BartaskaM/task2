<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/horizontal_divider"
        android:showDividers="middle"
        android:dividerPadding="16dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M. Bartaska"
                android:textSize="25sp"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <TextView
                android:id="@+id/player_1_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="120sp"
                android:textAlignment="center"
                android:gravity="center_vertical"/>
            <Button
                android:id="@+id/player_1_add_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add point"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M. Baneviciute"
                android:textSize="25sp"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <TextView
                android:id="@+id/player_2_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="0"
                android:textSize="120sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/player_2_add_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Add point"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:gravity="bottom">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="M. Bartaska"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/player_1_set_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/player_1_set_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/player_1_set_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="top">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="M. Baneviciute"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/player_2_set_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/player_2_set_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/player_2_set_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="25sp"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>